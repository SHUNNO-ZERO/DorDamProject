<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">








    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/list_brand"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/list_description"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Textview"
        app:layout_constraintStart_toEndOf="@+id/list_brand"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/list_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Textview"
        app:layout_constraintStart_toEndOf="@+id/list_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/list_price"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Textview"
        app:layout_constraintStart_toEndOf="@+id/list_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/list_qty"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="Textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toEndOf="@+id/list_price"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>